{
  "name": "financed-emissions-platform",
  "version": "1.0.0",
  "description": "Comprehensive financed emissions platform with frontend and backend",
  "private": true,
  "workspaces": [
    ".",
    "backend"
  ],
  "scripts": {
    "dev": "vite",
    "build": "vite build --mode production",
    "preview": "vite preview",
    "start": "vite preview",
    "type-check": "tsc --noEmit",
    "lint": "eslint . --ext ts,tsx --report-unused-disable-directives --max-warnings 0",
    "lint:fix": "eslint . --ext ts,tsx --fix",
    "test": "vitest",
    "test:run": "vitest run",
    "test:coverage": "vitest run --coverage",
    "test:integration": "node tests/integration/test-main-server-integration.js",
    "test:rag": "node tests/integration/test-rag-integration.js",
    "test:e2e": "playwright test",
    "format": "prettier --write \"src/**/*.{ts,tsx,js,jsx,json,css,md}\"",
    "format:check": "prettier --check \"src/**/*.{ts,tsx,js,jsx,json,css,md}\"",
    "scripts:dev": "node scripts/dev/start-dev.js",
    "scripts:debug": "node scripts/dev/debug-env-vars.js",
    "clean": "rm -rf node_modules dist .vite",
    "analyze": "vite build --mode production && npx vite-bundle-analyzer dist/stats.html",
    "deploy:vercel": "vercel --prod",
    "docker:build": "docker-compose build",
    "docker:up": "docker-compose up -d",
    "docker:down": "docker-compose down",
    "env:check": "node -e \"console.log('API URL:', process.env.VITE_API_BASE_URL || 'Not set'); console.log('WS URL:', process.env.VITE_WS_URL || 'Not set'); console.log('Environment:', process.env.VITE_ENVIRONMENT || 'Not set');\""
  },
